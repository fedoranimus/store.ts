{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "umd",
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "outDir": "dist/amd",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es2017"]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "plugins/**/*.ts",
        "storage/**/*.ts",
        "test/**/*.ts"
    ]
}